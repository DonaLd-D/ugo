.container{
  margin-bottom: 100rpx;
}
.container swiper{
  height: 750rpx;
  width: 750rpx;
}
.container swiper image{
  width: 750rpx;
  height: 750rpx;
}

.goodsinfo{
  border-bottom: 8px solid #eee;
  padding-bottom: 20rpx;
}
.goodsinfo .goodsprice{
  color:#ff2d4a;
  font-size: 24px;
  margin: 20rpx auto;
}
.goodsinfo .goodscollect{
  display: flex;
  margin: 20rpx;
}
.goodscollect .left{
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-right: 30rpx;
}
.goodscollect .right{
  display: flex;
  flex-direction: column;
  width: 130rpx;
  align-items: center;
  font-size: 13px;
  color:#aaa;
  border-left: 1px solid #eee;
  padding-left: 30rpx;
}
.goodsinfo>text{
  color:#aaa;
  margin: 20rpx 20rpx;
  font-size: 14px;
}

.goodstab{
  width: 750rpx;
  display: flex;
  align-items: center;
}
.goodstab view{
  width: 50%;
  height: 100rpx;
  margin: 20rpx 10rpx;
  line-height: 100rpx;
  text-align: center;
}
.active{
  background: #ff2d4a;
  color:#fff;
}
.goodsattrs{
  min-height: 750rpx;
}

.goodsbtns{
  display: flex;
  justify-content: space-around;
  position: fixed;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
}
.goodsbtns>view{
  height: 100%;
}
.kefu{
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 13px;
  color: #aaa;
}
.gouwuche{
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 13px;
  color: #aaa;
}
.add{
  flex: 3;
  text-align: center;
  line-height: 100rpx;
  background: #ffb517;
  color: #fff;
}
.buy{
  flex: 3;
  text-align: center;
  line-height: 100rpx;
  background: #ff2d4a;
  color: #fff;
}